doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title My Home Interio 

    // Bootstrap CSS
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.2/dist/css/bootstrap.min.css")

    script(src="https://code.jquery.com/jquery-3.6.0.min.js", integrity="sha384-KyZXEAg3QhqLMpG8r+GJs//vuG4r4rJ06a4en5U5qw5gt/YO5F5q5zkw5/J5f5r7l", crossorigin="anonymous")

    script(src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js", integrity="sha384-pzjw8f+ua8qc5np5pV5Bd5kpzVc5r5F5/T8C5s/YzjNl6R5B/m3pV5V5k5Yzjw5l6", crossorigin="anonymous")

    // Your custom CSS file
    link(rel="stylesheet", href="style.css") 

  body
    // Navigation Bar
    nav.navbar.navbar-expand-lg.navbar-light.bg-light
      a.navbar-brand(href="#") My Home Interio 
      button.navbar-toggler(type="button", data-toggle="collapse", data-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
        span.navbar-toggler-icon
      .collapse.navbar-collapse#navbarNav
        ul.navbar-nav.ml-auto
          li.nav-item
            a.nav-link(href="#") Sign Up
          li.nav-item
            a.nav-link(href="#") Sign In
          li.nav-item
            a.nav-link(href="#design.pub") Design Page

    // Main Content
    block content
      section.container.mt-4
        h1 Welcome to Interior Design Co. 
        p We specialize in creating beautiful and functional interior spaces.

    // Image Showcase
    section.container.mt-5
      h2 Our Previous Works
      .row
        .col-md-4.mb-4
          img.img-fluid(src="public/images/01.jpg", alt="Project 1")
        .col-md-4.mb-4
          img.img-fluid(src="public/images/02.jpeg", alt="Project 2")
        .col-md-4.mb-4
          img.img-fluid(src="public/images/03.jpg", alt="Project 3")
      .row
        .col-md-4.mb-4
          img.img-fluid(src="public/images/04.jpg", alt="Project 4")
        .col-md-4.mb-4
          img.img-fluid(src="public/images/05.jpg", alt="Project 5") 
        .col-md-4.mb-4
          img.img-fluid(src="public/images/06.jpg", alt="Project 6")
